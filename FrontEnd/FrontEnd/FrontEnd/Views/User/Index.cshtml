@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<FrontEnd.Models.UserViewModel>
@{
    ViewData["Title"] = "UserList";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<link rel="stylesheet" href="~/css/user-list.css" asp-append-version="true" />

<div class="container">
    <div class="main-card">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="page-title">User Management</h2>
                <p class="text-muted mb-0">Manage your system users effectively</p>
            </div>
            <a asp-action="Create" class="btn btn-create">
                <i class="fa fa-plus me-2"></i> Add New User
            </a>
        </div>

        <div class="table-responsive">
            <table class="table custom-table">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>User Info</th>
                        <th>@Html.DisplayNameFor(model => model.DateOfBirth)</th>
                        <th>Contact</th>
                        <th>@Html.DisplayNameFor(model => model.Address)</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <span class="badge-code">@Html.DisplayFor(modelItem => item.Code)</span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="rounded-circle bg-light d-flex justify-content-center align-items-center me-3" style="width: 40px; height: 40px; font-weight:bold; color:#555">
                                            @item.FullName?.Substring(0, 1).ToUpper()
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark">@Html.DisplayFor(modelItem => item.FullName)</div>
                                            <small class="text-muted">ID: @item.Id</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <i class="far fa-calendar-alt text-muted me-1"></i>
                                    @item.DateOfBirth?.ToString("dd/MM/yyyy")
                                </td>
                                <td>
                                    <div class="d-flex flex-column">
                                        <small><i class="fa fa-envelope text-muted me-2"></i>@Html.DisplayFor(modelItem => item.Email)</small>
                                        <small class="mt-1"><i class="fa fa-phone text-muted me-2"></i>@Html.DisplayFor(modelItem => item.PhoneNumber)</small>
                                    </div>
                                </td>
                                <td>
                                    <span class="text-truncate d-inline-block" style="max-width: 150px;" title="@item.Address">
                                        @Html.DisplayFor(modelItem => item.Address)
                                    </span>
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-action btn-edit" title="Edit">
                                        <i class="fa fa-pen"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-action btn-delete" title="Delete">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5">
                                <div class="text-muted">
                                    <i class="fa fa-folder-open fa-3x mb-3"></i>
                                    <p>No user data available.</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>