@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model FrontEnd.Models.UserViewModel

@{
    ViewData["Title"] = "Update User";
}

<!-- QUAN TRỌNG: Thêm Bootstrap CDN để chia cột hoạt động -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Link Fonts & Icon & CSS Custom -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<link rel="stylesheet" href="~/css/user-form.css" asp-append-version="true" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <!-- Sử dụng col-lg-10 để form rộng rãi, cân đối -->
        <div class="col-12 col-lg-10">
            <div class="main-card">

                <!-- Header -->
                <div class="form-header text-center border-0 mb-4">
                    <h1 class="page-title"><i class="fa fa-user-edit me-2 text-primary"></i>Update User Info</h1>
                    <p class="text-muted mb-0">Modify the user details below</p>
                </div>

                <form asp-action="Edit">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3 text-center"></div>

                    <!-- BẮT ĐẦU CHIA 2 CỘT -->
                    <div class="row">

                        <!-- === CỘT TRÁI (3 Trường: Code, Name, DOB) === -->
                        <div class="col-md-6">
                            <div class="p-2">
                                <!-- 1. Code -->
                                <div class="mb-4">
                                    <label asp-for="Code" class="control-label fw-bold">
                                        <i class="fa fa-barcode label-icon"></i> Code
                                    </label>
                                    <input asp-for="Code" class="form-control" placeholder="User Code" />
                                    <span asp-validation-for="Code" class="text-danger"></span>
                                </div>

                                <!-- 2. FullName -->
                                <div class="mb-4">
                                    <label asp-for="FullName" class="control-label fw-bold">
                                        <i class="fa fa-user label-icon"></i> Full Name
                                    </label>
                                    <input asp-for="FullName" class="form-control" placeholder="Full Name" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>

                                <!-- 3. DOB -->
                                <div class="mb-4">
                                    <label asp-for="DateOfBirth" class="control-label fw-bold">
                                        <i class="fa fa-calendar-alt label-icon"></i> Date of Birth
                                    </label>
                                    <input asp-for="DateOfBirth" type="date" class="form-control" />
                                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- === CỘT PHẢI (3 Trường: Email, Phone, Address) === -->
                        <div class="col-md-6">
                            <div class="p-2">
                                <!-- 4. Email -->
                                <div class="mb-4">
                                    <label asp-for="Email" class="control-label fw-bold">
                                        <i class="fa fa-envelope label-icon"></i> Email
                                    </label>
                                    <input asp-for="Email" type="email" class="form-control" placeholder="Email Address" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <!-- 5. Phone -->
                                <div class="mb-4">
                                    <label asp-for="PhoneNumber" class="control-label fw-bold">
                                        <i class="fa fa-phone label-icon"></i> Phone Number
                                    </label>
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>

                                <!-- 6. Address -->
                                <div class="mb-4">
                                    <label asp-for="Address" class="control-label fw-bold">
                                        <i class="fa fa-map-marker-alt label-icon"></i> Address
                                    </label>
                                    <input asp-for="Address" class="form-control" placeholder="Address" />
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- KẾT THÚC CHIA CỘT -->
                    <!-- Buttons: Căn giữa -->
                    <div class="d-flex justify-content-center mt-4 gap-3 border-top pt-4">
                        <a asp-action="Index" class="btn btn-back px-4">
                            <i class="fa fa-arrow-left me-1"></i> Back
                        </a>
                        <button type="submit" class="btn btn-save px-4">
                            <i class="fa fa-save me-1"></i> Save Changes
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}